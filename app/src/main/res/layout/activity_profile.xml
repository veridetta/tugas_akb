<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_13sdp">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardMaxElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_103sdp"
                app:cardElevation="@dimen/_4sdp">
                <ImageView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_280sdp"
                    android:background="@drawable/pp"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello Dila Adiliani"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/teal_700" />
            <TextView
                android:id="@+id/textNim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nim : 10119098"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/teal_700" />
            <TextView
                android:id="@+id/textKelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IF-3 (Kelas)"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/teal_700" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tentang Saya"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_18sdp"
                android:textColor="@color/teal_700" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/teal_700"/>
            <TextView
                android:id="@+id/textDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama saya Dila Adiliani, asal saya dari kota Karawang, saya memilih kuliah di universitas komputer Indonesia (UNIKOM) dengan fakultas teknik dan ilmu komputer di jurusan teknik informatika."
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/teal_700" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>